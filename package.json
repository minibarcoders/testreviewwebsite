{
  "name": "tech-review-site",
  "version": "0.1.0",
  "private": true,
  "prisma": {
    "seed": "ts-node prisma/seed.ts"
  },
  "scripts": {
    "dev": "next dev",
    "build": "prisma generate && prisma migrate deploy && next build",
    "start": "next start",
    "lint": "next lint",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:ci": "jest --ci --coverage --maxWorkers=2",
    "test:setup-db": "ts-node scripts/setup-test-db.ts",
    "test:e2e": "npm run test:setup-db && jest --config jest.config.e2e.js",
    "test:unit": "jest --testPathIgnorePatterns='.e2e.test.ts'",
    "test:integration": "npm run test:setup-db && jest --testPathPattern='integration.test.ts'",
    "test:update-snapshots": "jest -u",
    "test:clear-cache": "jest --clearCache",
    "validate": "npm run lint && npm run test:unit && npm run test:integration && npm run build",
    "prepare": "husky install",
    "db:seed": "prisma db seed"
  },
  "dependencies": {
    "@auth/prisma-adapter": "^2.7.4",
    "@headlessui/react": "^1.7.17",
    "@notionhq/client": "^2.2.15",
    "@prisma/client": "^5.22.0",
    "@tailwindcss/line-clamp": "^0.4.4",
    "@tinymce/tinymce-react": "^4.3.2",
    "@types/bcrypt": "^5.0.2",
    "@upstash/redis": "^1.34.3",
    "@vercel/analytics": "^1.4.1",
    "bcrypt": "^5.1.1",
    "bcryptjs": "^2.4.3",
    "cloudinary": "^2.5.1",
    "clsx": "^2.1.1",
    "date-fns": "^4.1.0",
    "framer-motion": "^11.14.4",
    "lucide-react": "^0.460.0",
    "next": "15.0.3",
    "next-auth": "^4.24.11",
    "next-themes": "^0.2.1",
    "openai": "^4.73.0",
    "prisma": "^5.22.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "slugify": "^1.6.6",
    "tailwind-merge": "^2.5.5",
    "tinymce": "^6.8.3",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@tailwindcss/forms": "^0.5.9",
    "@tailwindcss/typography": "^0.5.15",
    "@tanstack/react-query": "^5.28.4",
    "@testing-library/jest-dom": "^6.4.2",
    "@testing-library/react": "^14.2.1",
    "@testing-library/user-event": "^14.5.2",
    "@types/bcryptjs": "^2.4.6",
    "@types/jest": "^29.5.12",
    "@types/node": "^20.17.7",
    "@types/puppeteer": "^5.4.7",
    "@types/react": "^18",
    "@types/react-dom": "^18",
    "@types/wait-on": "^5.3.4",
    "cross-env": "^7.0.3",
    "eslint": "^8",
    "eslint-config-next": "15.0.3",
    "husky": "^9.0.11",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "jest-watch-typeahead": "^2.2.2",
    "lint-staged": "^15.2.2",
    "msw": "^2.2.3",
    "postcss": "^8",
    "prettier": "^3.2.5",
    "puppeteer": "^23.10.4",
    "tailwindcss": "^3.4.1",
    "ts-jest": "^29.1.2",
    "ts-node": "^10.9.2",
    "typescript": "^5.7.2",
    "wait-on": "^8.0.1"
  },
  "msw": {
    "workerDirectory": "public"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{json,md}": [
      "prettier --write"
    ]
  }
}
